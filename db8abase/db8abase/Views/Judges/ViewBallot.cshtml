@model db8abase.Models.ViewModels.JudgesBallotViewModel
@{
    ViewData["Title"] = "ViewBallot";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Round @Model.Round.RoundNumber - @Model.Judge.LastName, @Model.Judge.FirstName</h1>
<br />
<br />
<p>Enter speaker points using a .5 point increment, indicate the winner, and enter a reason for decision prior to submission</p>
<br />
<form asp-controller="Judges" asp-action="ViewBallot" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Ballot.BallotId" />
    <input type="hidden" asp-for="Ballot.RoundId" />
    <input type="hidden" asp-for="Ballot.TournamentId" />
    <input type="hidden" asp-for="Ballot.DebateId" />
    <input type="hidden" asp-for="Ballot.JudgeId" />
    <input type="hidden" asp-for="Ballot.WinnerId">
    <div class="row">
        <div class="col-sm-5">
            <h3 style="text-align:center; text-decoration:underline">Affirmative: @Model.AffirmativeTeam.IndividualTeamName</h3>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <h3 style="text-align:center; text-decoration:underline">Negative: @Model.NegativeTeam.IndividualTeamName</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <div class="form-group">
                <label asp-for="Ballot.FirstAffSpeakerPoints"></label>
                <input asp-for="Ballot.FirstAffSpeakerPoints" />
                <span asp-validation-for="Ballot.FirstAffSpeakerPoints"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ballot.SecondAffSpeakerPoints"></label>
                <input asp-for="Ballot.SecondAffSpeakerPoints" />
                <span asp-validation-for="Ballot.SecondAffSpeakerPoints"></span>
            </div>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <div class="form-group">
                <label asp-for="Ballot.FirstNegSpeakerPoints"></label>
                <input asp-for="Ballot.FirstNegSpeakerPoints" />
                <span asp-validation-for="Ballot.FirstNegSpeakerPoints"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ballot.SecondNegSpeakerPoints"></label>
                <input asp-for="Ballot.SecondNegSpeakerPoints" />
                <span asp-validation-for="Ballot.SecondNegSpeakerPoints"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="form-group">
                <p>Select the winner for the round</p>
                <select asp-for="Winner" asp-items="Model.TeamsInRound"></select>
            </div>
            <div class="form-group">
                <p>Select the loser for the round</p>
                <select asp-for="Loser" asp-items="Model.TeamsInRound"></select>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <p>Enter your reason for decision below:</p>
            <div class="form-group">
                <textarea asp-for="Ballot.ReasonForDecision" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Ballot.ReasonForDecision" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>

