@model db8abase.Models.Judge

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutJudge.cshtml";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Welcome @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h1>
<br />
<div class="row">
    <div class="col-sm-6">
        <h3 style="text-align:center;text-decoration:underline">Judging Philosophy</h3>
        <br />
        <p style="text-align:center">
            <a asp-area="" asp-controller="Judges" asp-action="EditPhilosophy" style="color:#087485">Edit Philosophy</a>
        </p>
    </div>
    <div class="col-sm-6">
        <h3 style="text-align:center;text-decoration:underline">Ballots</h3>
        <br />
        <p style="text-align:center">
            <a asp-area="" asp-controller="Judges" asp-action="ViewBallots" style="color:#087485">View My Ballots</a>
        </p>
    </div>
</div>

