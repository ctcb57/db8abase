@model db8abase.Models.Judge

@{
    ViewData["Title"] = "EditPhilosophy";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditPhilosophy</title>
</head>
<body>

    <h1 style="text-align:center;text-decoration:underline">Update Judging Philosophy</h1>
    <hr />
    
    <p style="text-align:center">Please update your judging philosophy below</p>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <form asp-action="EditPhilosophy">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="JudgeId" />
                <input type="hidden" asp-for="FirstName" />
                <input type="hidden" asp-for="LastName" />
                <input type="hidden" asp-for="PhoneNumber" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="SchoolId" />
                <input type="hidden" asp-for="ApplicationUserId" />
                <div class="form-group">
                    <label asp-for="JudgingPhilosophy" class="control-label"></label>
                    <textarea asp-for="JudgingPhilosophy" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="JudgingPhilosophy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div class="col-sm-1"></div>
        </div>
    </div>


</body>
</html>
