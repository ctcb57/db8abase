@model db8abase.Models.ViewModels.PairingsViewResultsViewModel
@{
    ViewData["Title"] = "ViewResults";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Results for @Html.DisplayFor(model => model.Tournament.Name)</h1>
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                Rank
            </th>
            <th>
                Team
            </th>
            <th>
                Wins
            </th>
            <th>
                Losses
            </th>
            <th>
                Speaks
            </th>
            <th>
                Elim Result
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Teams.Count(); i++)
        {
        <tr class="table-secondary">
            <th scope="row">
                @Html.DisplayFor(model => model.Ranking[i])
            </th>
            <td>
                @Html.DisplayFor(model => model.Teams[i].IndividualTeamName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Results[i].TeamWins)
            </td>
            <td>
                @Html.DisplayFor(model => model.Results[i].TeamLosses)
            </td>
            <td>
                @Html.DisplayFor(model => model.Results[i].SpeakerPoints)
            </td>
            <td>
                @Html.DisplayFor(model => model.Results[i].EliminationRoundResult)
            </td>
            @{
                var parms = new Dictionary<string, string>
                {
                    { $"{Model.Teams[i].IndividualTeamId}", $"{Model.Tournament.TournamentId}" }
                };
            }
            <td>
                <a asp-controller="Pairings" asp-action="ViewTeamResults" asp-all-route-data="parms" style="color:#087485">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<p>Click below to return to the tournament listing</p>
<p>
    <a asp-controller="Pairings" asp-action="Results" style="color:#087485">Back to Listing</a>
</p>

