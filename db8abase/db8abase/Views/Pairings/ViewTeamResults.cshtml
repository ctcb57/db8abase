@model db8abase.Models.ViewModels.PairingsViewResultsViewModel
@{
    ViewData["Title"] = "ViewTeamResults";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">@Html.DisplayFor(model => model.Tournament.Name) Results</h1>
    <h1 style="text-align:center; text-decoration:underline">Team: @Html.DisplayFor(model => model.Team.IndividualTeamName)</h1>
<br />
<h3 style="text-align:center">Prelim Record: @Html.DisplayFor(model => model.Result.TeamWins)-@Html.DisplayFor(model => model.Result.TeamLosses)</h3>
<h3 style="text-align:center">Elim Result: @Html.DisplayFor(model => model.Result.EliminationRoundResult)</h3>
<br />
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                Round
            </th>
            <th>
                Opponent
            </th>
            <th>
                Winner
            </th>
            <th>
                Judge
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Teams.Count(); i++)
        {
            <tr class="table-secondary">
                <th scope="row">
                    @Html.DisplayFor(model => model.Rounds[i].RoundNumber)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Teams[i].IndividualTeamName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Winners[i].IndividualTeamName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Judges[i].LastName), @Html.DisplayFor(model => model.Judges[i].FirstName)
                </td>
            </tr>
        }
    </tbody>
</table>
<p>Click below to return to the tournament rankings</p>
<p>
    <a asp-controller="Pairings" asp-action="Results" asp-route-id="@Model.Tournament.TournamentId" style="color:#087485">Back to Rankings</a>
</p>

