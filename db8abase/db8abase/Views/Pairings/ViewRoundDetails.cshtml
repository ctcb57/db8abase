@model db8abase.Models.ViewModels.PairingsTabulationViewModel
@{
    ViewData["Title"] = "ViewRoundDetails";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Round Details</h1>
<h4 style="text-align:center">@Html.DisplayFor(model => model.Tournament.Name)</h4>
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                Room
            </th>
            <th>
                Affirmative
            </th>
            <th>
                Negative
            </th>
            <th>
                Judge
            </th>
            <th>
                Ballot Status
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.AffirmativeTeams.Count(); i++)
        {
            <tr class="table-secondary">
                <th scope="row">
                    @Html.DisplayFor(model => model.Rooms[i].RoomNumber)
                </th>
                <td>
                    @Html.DisplayFor(model => model.AffirmativeTeams[i].IndividualTeamName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.NegativeTeams[i].IndividualTeamName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Judges[i].LastName), @Html.DisplayFor(model => model.Judges[i].FirstName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Ballots[i].BallotTurnedIn)
                </td>
            </tr>
        }
    </tbody>
</table>
<p>Click below to return to the tournament portal</p>
<p>
    <a asp-controller="TournamentDirectors" asp-action="TournamentPortal" style="color:#087485">Back To Portal</a>
</p>

