@model IEnumerable<db8abase.Models.Tournament>

    @{
        ViewData["Title"] = "Results";
    }
    <br />
    <br />
    <h1 style="text-align:center; text-decoration:underline">Tournament Listing</h1>
    <br />
    <h3 style="text-align:center;">Click the results link to below to see results for that tournament</h3>
    <br />
    <br />


    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.TournamentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.TournamentDate)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="ViewResults" asp-route-id="@item.TournamentId" style="color:#087485">Results</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
