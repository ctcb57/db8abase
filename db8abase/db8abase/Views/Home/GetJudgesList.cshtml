@model IEnumerable<db8abase.Models.Judge>

@{
    ViewData["Title"] = "GetJudgesList";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetJudgesList</title>
</head>
<body>
    <br />
    <br />
    <h1 style="text-align:center; text-decoration:underline">Judges Listing</h1>
    <br />
    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.LastName), @Html.DisplayFor(modelItem => item.FirstName)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="ViewPhilosophy" asp-route-id="@item.JudgeId" style="color:#087485">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
