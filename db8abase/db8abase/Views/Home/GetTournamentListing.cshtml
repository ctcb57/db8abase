@model IEnumerable<db8abase.Models.Tournament>

@{
    ViewData["Title"] = "GetTournamentListing";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Tournament Listing</h1>
<br />

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th style="text-align:center; text-decoration:underline">
                @Html.DisplayNameFor(model => model.TournamentDate)
            </th>
            <th style="text-align:center; text-decoration:underline">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary">
            <th scope="row">
                @Html.DisplayFor(modelItem => item.TournamentDate)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.TournamentId" style="color:#087485">Details</a> |
                <a asp-controller="Pairings" asp-action="PairingsView" asp-route-id="@item.TournamentId" style="color:#087485">Pairings</a>
            </td>
        </tr>
}
    </tbody>
</table>
