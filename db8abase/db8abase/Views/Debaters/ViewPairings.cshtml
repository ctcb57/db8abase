@model db8abase.Models.ViewModels.PairingsTabulationViewModel
@{
    ViewData["Title"] = "ViewPairings";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Pairings for: @Html.DisplayFor(model => model.Debater.FirstName) @Html.DisplayFor(model => model.Debater.LastName)</h1>
<h4 style="text-align:center">@Html.DisplayFor(model => model.Tournament.Name)</h4>
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                Round
            </th>
            <th>
                Room
            </th>
            <th>
                Affirmative
            </th>
            <th>
                Negative
            </th>
            <th>
                Judge
            </th>
            <th>
                Philosophy
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.AffirmativeTeams.Count(); i++)
        {
            <tr class="table-secondary">
                <th scope="row">
                    @Html.DisplayFor(model => model.Rounds[i].RoundNumber)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Rooms[i].RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => model.AffirmativeTeams[i].IndividualTeamName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.NegativeTeams[i].IndividualTeamName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Judges[i].LastName), @Html.DisplayFor(model => model.Judges[i].FirstName)
                </td>
                <td>
                    <a asp-controller="Home" asp-action="ViewPhilosophy" asp-route-id="@Model.Judges[i].JudgeId" style="color:#087485">Philosophy</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>Click below to return to the tournament listing</p>
<p>
    <a asp-controller="Debaters" asp-action="TournamentPairings" style="color:#087485">Back to Portal</a>
</p>

