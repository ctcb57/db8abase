@model IEnumerable<db8abase.Models.Tournament>

@{
    ViewData["Title"] = "TournamentPairings";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Tournament Listing</h1>
<br />
<h3 style="text-align:center;">Click pairing links to see your pairings for each tournament</h3>
<br />
<br />


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TournamentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary">
            <th scope="row">
                @Html.DisplayFor(modelItem => item.TournamentDate)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="ViewPairings" asp-route-id="@item.TournamentId" style="color:#087485">Pairings</a>
            </td>
        </tr>
}
    </tbody>
</table>
