@model db8abase.Models.Debater

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
    <h1 style="text-align:center; text-decoration:underline">Welcome @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h1>
<br />
<br />
<div class="row">
    <div class="col-sm-5">
        <h3 style="text-align:center; text-decoration:underline">My Pairings</h3>
        <p style="text-align:center"> Click below to view your pairings</p>
        <br />
        <p style="text-align:center">
            <a asp-area="" asp-controller="Debaters" asp-action="TournamentPairings" style="color:#087485">View Pairings</a>
        </p>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-5">
        <h3 style="text-align:center; text-decoration:underline">Debate Tub</h3>
        <p style="text-align:center"> Click below to enter your debate tub</p>
        <br />
        <p style="text-align:center">
            <a asp-area="" asp-controller="Debaters" asp-action="DebateTub" style="color:#087485">View Pairings</a>
        </p>
    </div>
</div>


