@model IEnumerable<db8abase.Models.School>

@{
    ViewData["Title"] = "GetListOfSchools";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h1 style="text-align: center; text-decoration: underline">Select Tournament Location</h1>
<br />
<h3>If you school is not listed in the table, click the create button at the bottom of the page</h3>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th style="text-align:center; text-decoration:underline">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary">
            <th scope="row">
                @Html.DisplayFor(modelItem => item.Name)
            </th>
            <td>
                <a asp-area="" asp-controller="TournamentDirectors" asp-action="SelectSchool" asp-route-id="@item.SchoolId">Select</a> 
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-area="" asp-controller="Schools" asp-action="Create">Create New School</a>
</p>
