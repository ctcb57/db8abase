@model IEnumerable<db8abase.Models.School>

@{
    ViewData["Title"] = "GetListOfSchools";
}
<br />
<br />
<h1 style="text-align: center; text-decoration: underline">Select Tournament Location</h1>
<br />
<h5>If your school is not listed in the table, click the create button at the bottom of the page</h5>
<br />
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th style="text-align:center; text-decoration:underline">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary">
            <th scope="row">
                @Html.DisplayFor(modelItem => item.Name)
            </th>
            <td>
                @if (this.User.IsInRole("TournamentDirector"))
                {
                    <a asp-controller="TournamentDirectors" asp-action="SelectSchool" asp-route-id="@item.SchoolId" style="color:#087485">Select</a>
                }
                else if (this.User.IsInRole("Coach"))
                {
                    <a asp-controller="Coaches" asp-action="SelectSchool" asp-route-id="@item.SchoolId" style="color:#087485">Select</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<br />
<p>
    <a asp-area="" asp-controller="Schools" asp-action="Create">Create New School</a>
</p>
