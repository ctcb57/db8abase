@model db8abase.Models.ViewModels.CoachesViewReportsViewModel
@{
    var XLabels = Newtonsoft.Json.JsonConvert.SerializeObject(Model.FirstTeamReports.Select(x => x.DimensionOne).ToList());
    var YValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.FirstTeamReports.Select(x => x.Quantity).ToList());
    var XLabels2 = Newtonsoft.Json.JsonConvert.SerializeObject(Model.SecondTeamReports.Select(x => x.DimensionOne).ToList());
    var YValues2 = Newtonsoft.Json.JsonConvert.SerializeObject(Model.SecondTeamReports.Select(x => x.Quantity).ToList());
    ViewData["Title"] = "ViewRecords";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bar Graph</title>
</head>
<body>
    <br />
    <br />
    <h1 style="text-align:center; text-decoration:underline"> Data View</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-sm-6">
            <h4 style="text-align:center">@Html.DisplayFor(m => m.TeamOne.IndividualTeamName)</h4>
        </div>
        <div class="col-sm-6">
            <h4 style="text-align:center">@Html.DisplayFor(m => m.TeamTwo.IndividualTeamName)</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="box-body">
                <div class="chart-container">
                    <canvas id="chart" style="width:50%; height:300px"></canvas>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="box-body">
                <div class="chart-container">
                    <canvas id="chart2" style="width:50%; height:300px"></canvas>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<script type="text/javascript">

        $(function () {
    var chartName = "chart";
        var ctx = document.getElementById(chartName).getContext('2d');
        var data = {
                labels: @Html.Raw(XLabels),
                datasets: [{
                    label: "Wins",
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 0, 0)',
                        'rgba(0, 255, 0)',
                        'rgba(0, 0, 255)',
                        'rgba(192, 192, 192)',
                        'rgba(255, 255, 0)',
                        'rgba(255, 0, 255)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 0, 0)',
                        'rgba(0, 255, 0)',
                        'rgba(0, 0, 255)',
                        'rgba(192, 192, 192)',
                        'rgba(255, 255, 0)',
                        'rgba(255, 0, 255)'
                    ],
                    borderWidth: 1,
                    data: @Html.Raw(YValues)
    }]
            };

var options = {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: true,
                            color: "rgba(255,99,164,0.2)"
                        }
}],
                    xAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: false
                        }
                    }]
                }
            };

       var myChart = new  Chart(ctx, {
                options: options,
                data: data,
                type:'bar'

            });
        });
</script>
