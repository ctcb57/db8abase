@{
    if (this.User.IsInRole("TournamentDirector"))
    {
        Layout = "~/Views/Shared/_LayoutDirector.cshtml";
    }
    else if (this.User.IsInRole("Coach"))
    {
        Layout = "~/Views/Shared/_LayoutCoach.cshtml";
    }
    else if (this.User.IsInRole("Judge"))
    {
        Layout = "~/Views/Shared/_LayoutJudge.cshtml";
    }
    else if (this.User.IsInRole("Debater"))
    {
        Layout = "~/Views/Shared/_LayoutDebater.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
