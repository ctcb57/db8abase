@model db8abase.Models.ViewModels.PairingsSpeakerPointsViewModel
@{
    ViewData["Title"] = "DisplaySpeakerAwards";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Speaker Awards for @Model.Tournament.Name</h1>
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                Rank
            </th>
            <th>
                Speaker
            </th>
            <th>
                School
            </th>
            <th>
                Points
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.SpeakerAwards.Count(); i++)
        {
            <tr class="table-secondary">
                <th scope="row">
                    @Html.DisplayFor(model => model.Ranking[i])
                </th>
                <td>
                    @Html.DisplayFor(model => model.SpeakerAwards[i].FirstName) @Html.DisplayFor(model => model.SpeakerAwards[i].LastName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Schools[i].Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.SpeakerAwards[i].IndividualTournamentSpeakerPoints)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<p>All speaker awards are listed above.  Please print this page for your reference.</p>
<p>Click below in order to submit speaker awards.</p>
<p>
    <a asp-controller="TournamentDirectors" asp-action="CompleteSpeakerAwards" asp-route-id="@Model.Tournament.TournamentId" style="color:#087485">Return to Portal</a>
</p>