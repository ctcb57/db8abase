@model db8abase.Models.Tournament

@{
    ViewData["Title"] = "CreateTournament";
}
<br />
<h1>Create Tournament</h1>
<br />
<h5>Be sure to upload tournament invitation BEFORE clicking create</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTournament">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TournamentId" />
            <input type="hidden" asp-for="NumberOfEliminationRounds" />
            <input type="hidden" asp-for="FilePath" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfRounds" class="control-label"></label>
                <input asp-for="NumberOfRounds" class="form-control" />
                <span asp-validation-for="NumberOfRounds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryFee" class="control-label"></label>
                <input asp-for="EntryFee" class="form-control" />
                <span asp-validation-for="EntryFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentDate" class="control-label"></label>
                <input asp-for="TournamentDate" class="form-control" />
                <span asp-validation-for="TournamentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamLimit" class="control-label"></label>
                <input asp-for="TeamLimit" class="form-control" />
                <span asp-validation-for="TeamLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <form method="post" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Index">
            <div class="form-group">
                <div class="col-sm-10">
                    <p> Upload invitation files by choosing files and then clicking upload:</p>
                    <input type ="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="submit" value="Upload" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

