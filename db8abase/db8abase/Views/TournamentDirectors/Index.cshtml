    <div class="col-sm-6">
        <h3 style="text-align:center;text-decoration:underline">Tournament Portal</h3>
        <br />
        <p style= "text-align:center">
            <a asp-area="" asp-controller="TournamentDirectors" asp-action="TournamentPortal" style="color:#087485">Enter Portal</a>
        </p>
