@model db8abase.Models.TournamentDirector

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDirector.cshtml";
}
<br />
<br />
<h1 style="text-align:center;text-decoration:underline"> Welcome @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h1>
<br />
<br />
<div class="row">
    <div class="col-sm-6">
        <h3 style="text-align:center;text-decoration:underline">Tournament Management</h3>
        <br />
        <p style= "text-align:center">
            <a asp-area="" asp-controller="TournamentDirectors" asp-action="CreateTournament" style="color:#087485">Create Tournament</a>
